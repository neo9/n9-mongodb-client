{
  "git": {
    "commit": true,
    "commitMessage": "release: V ${version}",
    "requireCleanWorkingDir": true,
    "tag": true,
    "tagName": "%s",
    "tagAnnotation": "release: V ${version}",
    "push": true
  },
  "kooks": {
    "before:init": ["npm run lint", "npm run test"],
    "after:release": "npm run post:release"
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "eslint",
      "infile": "CHANGELOG.md"
    }
  }
}
